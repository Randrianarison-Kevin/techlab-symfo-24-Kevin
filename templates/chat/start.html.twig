{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block stylesheets %}
    <style>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .chat-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            text-align: center;
        }
        .chat-container h1 {
            font-size: 24px;
            color: #333333;
            margin-bottom: 20px;
        }
        .chat-container a {
            display: block;
            padding: 10px;
            margin: 10px 0;
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }
        .chat-container a:hover {
            background-color: #0056b3;
        }
        .logout-link {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background-color: #dc3545 !important;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }
        .logout-link:hover {
            background-color: #c82333;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="chat-container">
        <a href="{{ path('app_logout') }}" class="logout-link">Logout</a>
        <h1>Tous les utilisateurs</h1>

        {% for user in allUser %}
            <a href="{{ path('app_chat', {id: user.id}) }}">{{ user.username }}</a>
        {% endfor %}
    </div>
{% endblock %}
